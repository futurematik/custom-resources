{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "tsc-watch",
      "type": "npm",
      "script": "watch:compile",
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": { "regexp": "^.*Starting .*compilation.*$" },
          "endsPattern": { "regexp": "^.*Watching.*$" }
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "watch"
      }
    },
    {
      "label": "sam start-api",
      "type": "npm",
      "script": "dev:lambda",
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "watch"
      }
    },
    {
      "label": "sam start-api debug",
      "type": "npm",
      "script": "debug:lambda",
      "isBackground": true,
      "problemMatcher": [],
      "dependsOn": ["tsc-watch"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false,
        "group": "watch"
      }
    }
  ]
}
