{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2017"],
    "module": "es2015",
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noUnusedLocals": true,
    "outDir": "lib/",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "types": ["node"]
  },
  "include": ["src/"],
  "exclude": ["node_modules/", "lib/", "dist/"]
}
